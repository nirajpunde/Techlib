<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.niraj.learn.Subject">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/item1btn"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@drawable/networks_2"
                android:onClick="networks"
                android:text="NETWORKS"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item3btn"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@drawable/sepm"
                android:onClick="softengg"
                android:text="SOFTWARE ENGINEERING"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item2btn"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@drawable/isee_3"
                android:onClick="isee"
                android:text="Information System and Engineering Economics"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item4btn"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@drawable/dbms3"
                android:onClick="dbms"
                android:text="Database Management System"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item5btn"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@drawable/toc2"
                android:onClick="toc"
                android:text="THEORY OF COMPUTATION"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="bold" />


        </LinearLayout>



    </ScrollView>
</android.support.constraint.ConstraintLayout>
